@model ShoppingCartVM

<form method="post">
    <div class="card border-dark mt-4 mb-4">
        <div class="card-header text-light py-3">
            <div class="row px-4">
                <div class="col-6">
                    <h3 class="text-white text-uppercase">Shopping Cart</h3>
                </div>
                <div class="col-6 text-end">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-danger text-uppercase btn-sm"><small>Continue Shopping</small></a>
                </div>
            </div>
        </div>
        <div class="card-body my-2">
            <div class="row">
            </div>
            <div class="row mb-3 pb-3">
                <div class="col-md-10 offset-md-1">
                    @foreach(var item in Model.ShoppingCartList){
                    <div class="row border-bottom pb-3">
                        <div class="d-none d-lg-block col-lg-1 text-center py-2">
                            <img src="@item.Product.ImageURL" class="rounded" width="100%" />
                        </div>
                        <div class="col-12 col-lg-6 pt-md-3">
                            <h5 class="text-uppercase text-secondary"><strong>@item.Product.Title</strong></h5>
                                <p><small>@Html.Raw(item.Product.Description)</small></p>
                        </div>
                        <div class="col-12  col-lg-5 text-center row pt-4">
                            <div class="col-3 text-md-right pt-2">
                                <h6 class="fw-semibold">
                                        @item.Price.ToString("c")
                                    <span class="text-muted">&nbsp;x&nbsp;</span>@item.Count
                                </h6>
                            </div>
                            <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-action="minus" asp-route-cartId="@item.Id" class="btn btn-outline-primary bg-gradient py-2 mx-1">
                                        <i class="bi bi-dash-square"></i>
                                    </a> &nbsp;
                                        <a asp-action="plus" asp-route-cartId="@item.Id" class="btn btn-outline-primary bg-gradient py-2 mx-1">
                                        <i class="bi bi-plus-square"></i>
                                    </a> 
                                </div>

                            </div>
                            <div class="col-3 col-sm-4 col-lg-2 text-right pt-2">
                                    <a asp-action="remove" asp-route-cartId="@item.Id" class="btn btn-danger bg-gradient py-2 ">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </div>

                    </div>
                    }


                </div>
            </div>
            <div class="d-flex justify-content-end row">
                <div class="col-12 d-flex justify-content-end">
                    <h4 class=" text-light justify-content-end fw-semibold text-uppercase col-md-2"> Total: @Model.OrderTotal.ToString("c")</h4>
                </div>
            </div>
            <div class="row d-flex justify-content-end">
                <div class="w-auto d-flex justify-content-center mx-3">
                    <a asp-action="Summary" class="d-flex justify-content-center btn btn-primary border-0 bg-gradient w-100 py-2">Summary</a>
                </div>
            </div>
        </div>
    </div>
</form>