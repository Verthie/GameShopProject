@model ShoppingCart

<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="card border-dark mt-4 mb-4">
        <div class="card-header text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Product.Title</h3>
                    <p class="text-white-50 fw-semibold mb-0">Made by @Model.Product.Developer</p>
                    <p class="text-white-50 fw-semibold mb-0">Published by @Model.Product.Publisher</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1" style="height: 400px;">
                        <img src="@Model.Product.ImageURL" class="rounded" style="width:100%; height: 100%; object-fit:cover;" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-3">
                            <span class="badge bg-primary">@Model.Product.Category.Name</span>
                        </div>
                        <div class="row ps-2 h4">
                            <div class="p-1 col-3 col-lg-2 text-info fw-bold">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-3 col-lg-4 text-info fw-bold">
                                <div>@Model.Product.Price.ToString("c")</div>
                            </div>
                        </div>
                        <div class="row">
                            <p class="lh-sm">@Html.Raw(Model.Product.Description)</p>
                        </div>
                        <div class="row pl-2 mb-3">
                            <div class="col-6 col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Amount
                                    </span>
                                    <input asp-for="Count" type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end col-6 col-md-3">
                            <button type="submit"
                                    class="btn btn-primary  w-100 py-2 text-uppercase fw-semibold">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>