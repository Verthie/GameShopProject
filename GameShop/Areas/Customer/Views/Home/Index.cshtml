@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageURL" class="card-img-top rounded"/>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-light text-uppercase text-center">@product.Title</p>
                                <p class="card-title text-warning text-center">Made by <b>@product.Developer</b></p>
                                <p class="card-title text-warning text-center">Published by <b>@product.Publisher</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-white text-center">Price: <span>@product.Price.ToString("c")</span></p>
                            </div>
                            <div>
                                <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary form-control">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>